<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--     TODO: 更改群头像-->
    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image1"
            android:text="谷歌内部交流群"
            android:textColor="@color/black"
            android:textSize="45px" />

        <TextView
            android:id="@+id/time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="190dp"
            android:layout_toRightOf="@id/name1"
            android:text="昨天"
            android:textSize="45px" />

        <ImageView
            android:id="@+id/image1"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@mipmap/favicon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_v1"
            android:layout_below="@id/name1"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/image1"
            android:text="三少爷:3天之后收购腾讯、百度、阿..."
            android:textSize="45px" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="1dp"
        android:layout_below="@id/layout1"
        android:layout_marginLeft="50dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#666666"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout1">

        <TextView
            android:id="@+id/name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image2"
            android:text="收购万达讨论组"
            android:textColor="@color/black"
            android:textSize="45px" />

        <TextView
            android:id="@+id/time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="190dp"
            android:layout_toRightOf="@id/name2"
            android:text="昨天"
            android:textSize="45px" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@mipmap/favicon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name2"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/image2"
            android:text="王撕葱:明天把万达股票全部抛出,..."
            android:textSize="45px" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="1dp"
        android:layout_below="@id/layout2"
        android:layout_marginLeft="50dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#666666"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout2">

        <TextView
            android:id="@+id/name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image3"
            android:text="509总统套房"
            android:textColor="@color/black"
            android:textSize="45px" />

        <TextView
            android:id="@+id/time3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="205dp"
            android:layout_toRightOf="@id/name3"
            android:text="10:00"
            android:textSize="45px" />

        <ImageView
            android:id="@+id/image3"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@mipmap/favicon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name3"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/image3"
            android:text="aka_AK47:有没有人洗衣服?.........."
            android:textSize="45px" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="1dp"
        android:layout_below="@id/layout3"
        android:layout_marginLeft="50dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#666666"
            />
    </RelativeLayout>

    <RelativeLayout
